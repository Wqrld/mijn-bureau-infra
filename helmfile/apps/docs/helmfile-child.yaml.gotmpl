bases:
  - "../../bases/default.yaml.gotmpl"

releases:
  - name: docs-postgresql
    chart: ../common/charts/postgresql
    version: "16.7.18"
    {{- if .Values.application.docs.namespace }}
    namespace: {{ .Values.application.docs.namespace }}
    {{- end }}
    installed: {{ and (eq .Environment.Name "demo") (.Values.application.docs.enabled) | toYaml }}
    values:
      - "values-postgresql.yaml.gotmpl"

  - name: docs-redis
    chart: ../common/charts/redis
    version: "21.2.6"
    {{- if .Values.application.docs.namespace }}
    namespace: {{ .Values.application.docs.namespace }}
    {{- end }}
    installed: {{ and (eq .Environment.Name "demo") (.Values.application.docs.enabled) | toYaml }}
    values:
      - "values-redis.yaml.gotmpl"

  - name: docs-minio
    chart: ../common/charts/minio
    version: "17.0.11"
    {{- if .Values.application.docs.namespace }}
    namespace: {{ .Values.application.docs.namespace }}
    {{- end }}
    installed: {{ and (eq .Environment.Name "demo") (.Values.application.docs.enabled) | toYaml }}
    values:
      - "values-minio.yaml.gotmpl"

  - name: docs
    chart: charts/docs
    condition: application.docs.enabled
    {{- if .Values.application.docs.namespace }}
    namespace: {{ .Values.application.docs.namespace }}
    {{- end }}
    {{- if and (eq .Environment.Name "demo") (.Values.application.docs.enabled) }}
    needs:
      - {{ if .Values.application.docs.namespace }}{{ .Values.application.docs.namespace }}/{{ end }}docs-postgresql
      - {{ if .Values.application.docs.namespace }}{{ .Values.application.docs.namespace }}/{{ end }}docs-redis
      - {{ if .Values.application.docs.namespace }}{{ .Values.application.docs.namespace }}/{{ end }}docs-minio
    {{- end }}
    values:
      - "values.yaml.gotmpl"

  - name: docs-nginx
    chart: ../common/charts/nginx
    version: "22.0.0"
    {{- if .Values.application.docs.namespace }}
    namespace: {{ .Values.application.docs.namespace }}
    {{- end }}
    installed: {{ .Values.application.docs.enabled | toYaml }}
    needs:
      - {{ if .Values.application.docs.namespace }}{{ .Values.application.docs.namespace }}/{{ end }}docs
    values:
      - "values-nginx.yaml.gotmpl"

  - name: docs-static
    chart: ../common/charts/nginx
    version: "22.0.0"
    {{- if .Values.application.docs.namespace }}
    namespace: {{ .Values.application.docs.namespace }}
    {{- end }}
    installed: {{ .Values.application.docs.enabled | toYaml }}
    values:
      - "values-static-nginx.yaml.gotmpl"
